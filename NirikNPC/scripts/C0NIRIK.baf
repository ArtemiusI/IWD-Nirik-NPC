	InParty(Myself)
	CombatCounter(0)
	OR(2)
	PartyHasItem("BIRDS")
	PartyHasItem("SQUIREL")
	Global("C0NirikCagedAnimals","GLOBAL",0)
THEN
  RESPONSE #100
	SetInterrupt(FALSE)
	SetGlobal("C0NirikCagedAnimals","GLOBAL",1)
	Wait(1)
	DisplayStringHead(Myself,~Creatures of the forest deserve a proper home, not a cage.~)
	SetInterrupt(TRUE)
END
