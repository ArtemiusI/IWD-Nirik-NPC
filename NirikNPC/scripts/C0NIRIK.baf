// TALK - AR3000

IF
	InParty(Myself)
	InMyArea(Player1)
	!StateCheck(Myself,CD_STATE_NOTVALID)
	OR(2)
	Global("C0NirikTalkTimer","LOCALS",0)
	RealGlobalTimerExpired("C0NirikTalkTimer","LOCALS")
	!See([ENEMY])
	CombatCounter(0)
	AreaCheck("AR3000")
	Switch("C0NirikTalkAR3000","AR3000")
THEN
RESPONSE #0
	SetGlobal("C0NirikTalkAR3000","AR3000",1)
	RealSetGlobalTimer("C0NirikTalkTimer","GLOBAL",6)
RESPONSE #1
	SetGlobal("C0NirikTalkAR3000","AR3000",2)
	StartDialogueNoSet(Player1)
END

